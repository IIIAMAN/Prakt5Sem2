<UserControl x:Name="Daysss" x:Class="Prakticheskaya5.Days"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prakticheskaya5"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <UserControl.Background>
        <SolidColorBrush Color="#FF120E17" Opacity="0.69"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="2.8*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="NumberText" Margin="1,0,1,0" Foreground="#DDFFFFFF" HorizontalContentAlignment="Center" FontSize="18"/>
        <Button x:Name="Knopka" Height="auto" Grid.Row="1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Padding="0,0,0,0" Click="Knopka_Click">
            <Image x:Name="Image" Grid.Row="1" Source="photo.png" Height="75" Width="99">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="/photo.png" Stretch="Fill" TileMode="None"/>
                </Image.OpacityMask>
            </Image>
        </Button>
    </Grid>
</UserControl>
